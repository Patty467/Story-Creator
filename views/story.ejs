<!DOCTYPE html>

<head>
  <meta charset="utf-8">
  <title>View Story</title>

  <!-- from lighthouse -->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />

  <!-- custom font -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Bungee&family=Source+Sans+3:ital,wght@0,300;0,600;1,300;1,600&family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&family=Urbanist:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,900&display=swap"
    rel="stylesheet">
  <!-- font icons -->
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
</head>

<body>

  <%- include('components/_header') %>

    <section class="main_content">

      <div class="main_guide">
        <div class="main_guide_wrapper">
          <div class="main_guide_header">
            <div class="created_by_wrapper">
              <div class="main_user">
                <div class="contributor hero"></div>
                <div>
                  <%=stories.title%>
                </div>
              </div>
            </div>
            <div class="status">
              <div class="text-block">active</div>
            </div>
          </div>
          <div class="main_guide_contributors">
            <div class="small_title">Contributing Authors</div>
            <div class="divider"></div>
            <div class="story_contributors">
              <div class="contributor _2"></div>
              <div>User 2</div>
            </div>
            <div class="story_contributors">
              <div class="contributor _3"></div>
              <div>User 3</div>
            </div>
            <div class="story_contributors">
              <div class="contributor _4"></div>
              <div>User 4</div>
            </div>
          </div>
        </div>
      </div>

      <div class="main_feed">
        <div class="hero_story">
          <h3 class="hero_story_heading">

          </h3>
          <div class="divider"></div>
          <div class="hero_story_content">
            <p class="hero_story_paragraph">

            </p>
          </div>
          <div class="accepted_contribution">
            <div class="submission_user">
              <div class="contributor _2"></div>
              <div>User 2</div>
            </div>
            <p class="hero_story_paragraph">Import accepted story contribution # 1 here from database.</p>
          </div>
          <div class="accepted_contribution">
            <div class="submission_user">
              <div class="contributor _3"></div>
              <div>User 3</div>
            </div>
            <p class="hero_story_paragraph">Import accepted story contribution # 2 here from database.</p>
          </div>
          <div class="accepted_contribution">
            <div class="submission_user">
              <div class="contributor"></div>
              <div>User 1</div>
            </div>
            <p class="hero_story_paragraph">Import accepted story contribution # 3 here from database.</p>
          </div>
        </div>

        <div class="hero_queue">

          <div class="divider_big"></div>
          <h1 class="queue_title">Next addition queue</h1>
          <div class="form-block">
            <form>
              <div class="form_header">
                <div class="contributor _5"></div>
                <div>Logged-in User</div>
              </div>
              <textarea placeholder="Insert Submission" maxlength="5000" id="field" name="field" data-name="Field"
                class="textarea"></textarea>
              <div class="form_footer">
                <input type="submit" value="Submit" data-wait="Please wait..." class="button">
              </div>
            </form>
          </div>

          <div class="submission">
            <div class="submission_user">
              <div class="contributor _2"></div>
              <div>User 2</div>
            </div>
            <p class="hero_story_paragraph">Import story submission here from database. Order by amount of
              votes</p>
            <div class="divider"></div>
            <div class="submission_footer">
              <div class="submission_vote">
                <span class="material-symbols-outlined">
                  keyboard_arrow_up
                </span>
                <div class="vote_count">25</div>
                <span class="material-symbols-outlined">
                  keyboard_arrow_down
                </span>
              </div>
              <div class="submission_date">
                <div>date/time submitted</div>
              </div>
            </div>
          </div>

          <div class="submission">
            <div class="submission_user">
              <div class="contributor _3"></div>
              <div>User 3</div>
            </div>
            <p class="hero_story_paragraph">Import story submission here from database. Order by amount of
              votes</p>
            <div class="divider"></div>
            <div class="submission_footer">
              <div class="submission_vote">
                <span class="material-symbols-outlined">
                  keyboard_arrow_up
                </span>
                <div class="vote_count">18</div>
                <span class="material-symbols-outlined">
                  keyboard_arrow_down
                </span>
              </div>
              <div class="submission_date">
                <div>date/time submitted</div>
              </div>
            </div>
          </div>

          <div class="submission">
            <div class="submission_user">
              <div class="contributor"></div>
              <div>User 1</div>
            </div>
            <p class="hero_story_paragraph">Import story submission here from database. Order by amount of
              votes</p>
            <div class="divider"></div>
            <div class="submission_footer">
              <div class="submission_vote">
                <span class="material-symbols-outlined">
                  keyboard_arrow_up
                </span>
                <div class="vote_count">17</div>
                <span class="material-symbols-outlined">
                  keyboard_arrow_down
                </span>
              </div>
              <div class="submission_date">
                <div>date/time submitted</div>
              </div>
            </div>
          </div>

          <div class="submission">
            <div class="submission_user">
              <div class="contributor _4"></div>
              <div>User 4</div>
            </div>
            <p class="hero_story_paragraph">Import story submission here from database. Order by amount of
              votes</p>
            <div class="divider"></div>
            <div class="submission_footer">
              <div class="submission_vote">
                <span class="material-symbols-outlined">
                  keyboard_arrow_up
                </span>
                <div class="vote_count">5</div>
                <span class="material-symbols-outlined">
                  keyboard_arrow_down
                </span>
              </div>
              <div class="submission_date">
                <div>date/time submitted</div>
              </div>
            </div>
          </div>

        </div>

      </div>

    </section>

</body>

</html>