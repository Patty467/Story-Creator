<!DOCTYPE html>

<head>
  <meta charset="utf-8">
  <title>View Story</title>

  <!-- from lighthouse -->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />

  <!-- custom font -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Bungee&family=Source+Sans+3:ital,wght@0,300;0,600;1,300;1,600&family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&family=Urbanist:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,900&display=swap"
    rel="stylesheet">
  <!-- font icons -->
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
</head>

<body>
  <%- include('components/_header') %>

    <section class="main_content">

      <div class="main_guide">
        <div class="main_guide_wrapper">
          <div class="main_guide_header">
            <div class="created_by_wrapper">
              <div class="main_user">
                <div class="contributor hero"></div>
                <div>


                  <% stories.forEach(function(story) { %>
                    <%= story.name %>
                      <% }); %>



                </div>
              </div>
            </div>
            <div class="status">
              <div class="text-block">active</div>
            </div>
          </div>
          <div class="main_guide_contributors">
            <div class="small_title">Contributing Authors</div>
            <div class="divider"></div>
            <div class="story_contributors">
              <div class="contributor _2"></div>
              <div>User 2</div>
            </div>
            <div class="story_contributors">
              <div class="contributor _3"></div>
              <div>User 3</div>
            </div>
            <div class="story_contributors">
              <div class="contributor _4"></div>
              <div>User 4</div>
            </div>
          </div>
        </div>
      </div>

      <div class="main_feed">
        <div class="hero_story">
          <h3 class="hero_story_heading">

            <% stories.forEach(function(story) { %>
              <%= story.title %>
                <% }); %>
          </h3>
          <div class="divider"></div>
          <div class="hero_story_content">
            <p class="hero_story_paragraph">

              <% stories.forEach(function(story) { %>
                <%= story.content %>
                  <% }); %>
            </p>
          </div>
          <div class="accepted_contribution">
            <div class="submission_user">
              <div class="contributor _2"></div>
              <div>User 2</div>
            </div>
            <p class="hero_story_paragraph">Import accepted story contribution # 1 here from database.</p>
          </div>
          <div class="accepted_contribution">
            <div class="submission_user">
              <div class="contributor _3"></div>
              <div>User 3</div>
            </div>
            <p class="hero_story_paragraph">Import accepted story contribution # 2 here from database.</p>
          </div>
          <div class="accepted_contribution">
            <div class="submission_user">
              <div class="contributor"></div>
              <div>User 1</div>
            </div>
            <p class="hero_story_paragraph">Import accepted story contribution # 3 here from database.</p>
          </div>
        </div>

        <%- include('components/_submissions_queue') %>


      </div>

    </section>

</body>

</html>